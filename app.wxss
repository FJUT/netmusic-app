    text-align: center;
}

.page input{
    padding: 20rpx 30rpx;
    background-color: #fff;
}
checkbox, radio{
    margin-right: 10rpx;
}

.btn-area{
    padding: 0 30px;
}
.btn-area button{
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.page {
    min-height: 100%;
    flex: 1;
    
    overflow: hidden;
}

.tags{border: 1rpx solid #BB2C08;color: #BB2C08;font-size: 20rpx;line-height: 1;margin-right: 10rpx;padding:3rpx 8rpx;}

.box-txt-e{
text-overflow: ellipsis;
display: box;
box-orient: vertical;
line-clamp:2;
overflow: hidden;}


#pageplay{position: fixed;width: 100%;display: flex;justify-content: center;bottom: 0;background: rgba(33,33,33,.8);-webkit-backdrop-filter: blur(15px);backdrop-filter: blur(15px);z-index: 100;align-items: center; }
#pp_pic{width: 105rpx;text-align: center;flex: 0 0 100rpx;border-radius: 50%;padding: 15rpx 0}
#pageplay image{width:70rpx;height:70rpx;vertical-align: top}
#pp_name{flex: 1;line-height: 1.6;color: #fff;white-space: normal;overflow: hidden;text-overflow: ellipsis;font-size:28rpx;}
#pp_name view{font-size: 22rpx;color: #eee}
#pp_action{display: flex;flex: 0 0 170rpx;align-items: center}
#pp_action .pa-baction{padding-left: 10rpx;flex: 1}
#pageplay #pp_next{width: 60rpx;height: 60rpx}

.page_pp{padding-bottom:100rpx; }
.page_loading{text-align: center;padding: 20rpx;display: block}
