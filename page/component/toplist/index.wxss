.listheader{margin:25rpx 15rpx 15rpx;border-bottom:1px solid #eee;padding-bottom: 20rpx;}
.listheader:before{display: inline-block;width: 5rpx;background-color: red;height: .8em;content:"";vertical-align: middle;margin-right: 15rpx;
border-radius: 10rpx;}
.toplist{overflow: hidden;display: flex;flex-wrap:wrap;padding-right: 15rpx;}
.tl_cnt{width: 33.33%;padding:10rpx 0 10rpx 15rpx;float:left;box-sizing: border-box}
.tl_cnt text{display: block;font-size: 26rpx;color: #666}
.tl_cnt image{width: 100%;height: 100%;position: absolute;top:0;left:0}
.tl_cnt view{position: relative;height: 0;padding-top: 100%;overflow: hidden;margin-bottom: 10rpx;}
.tl_cnt view text{position: absolute;right: 0;bottom:0;line-height: 32rpx;color: #fff;
z-index: 2;width: 100%;padding: 8rpx;font-size: 22rpx; box-sizing: border-box;}
.tl_cnt view:after{height: 50%;width:100%;left: 0;top:50%;z-index: 1;content:"";position: absolute;
background-image:linear-gradient(rgba(0,0,0,0),rgba(0,0,0,.1));opacity: .5}