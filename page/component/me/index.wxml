<import src="../../../utils/pl.wxml" />
<view>
  <view class="menu">
    <view class="mn_list">
    <view class="mn_ico">
      <image src="../../../image/cm2_list_icn_dld_new@2x.png"></image></view>
      <view class="cmain">我的下载</view>
      <view class="rdes">
        <view class="arrow"></view>
      </view>
    </view>
    <navigator url="../record/index?uid={{uid}}" class="mn_list">
      <view class="mn_ico"><image src="../../../image/cm2_list_icn_recent_new@2x.png"></image></view>
      <view class="cmain">最近播放</view>
      <view class="rdes">
        <view class="arrow"></view>
      </view>
    </navigator>
    <navigator url="../cloud/index" class="mn_list">
      <view class="mn_ico"><image src="../../../image/cm2_lay_icn_cloud@2x.png"></image></view>
      <view class="cmain">我的云盘</view>
      <view class="rdes">
        <view class="arrow"></view>
      </view>
    </navigator>
    <view class="mn_list">
      <view class="mn_ico"><image src="../../../image/cm2_list_icn_artists_new@2x.png"></image></view>
      <view class="cmain">我的歌手</view>
      <view class="rdes">
        <text>{{subcount.artistCount}}</text>
        <view class="arrow"></view>
      </view>
    </view>
    <view class="mn_list">
      <view class="mn_ico"><image src="../../../image/cm2_list_icn_mymv_new@2x.png"></image></view>
      <view class="cmain">Mv</view>
      <view class="rdes">
        <text>{{subcount.mvCount}}</text>
        <view class="arrow"></view>
      </view>
    </view>
    <view class="mn_list">
      <view class="mn_ico"><image src="../../../image/cm2_list_icn_rdi_new@2x.png"></image></view>
      <view class="cmain">我的电台</view>
      <view class="rdes">
        <text>{{subcount.djRadioCount}}</text>
        <view class="arrow"></view>
      </view>
    </view>
  </view>
  <view class="playlist" wx:if="{{!loading}}">
    <view class="sm_title">我创建的歌单 <text>({{subcount.createdPlaylistCount}})</text>
    </view>
    <template is="pl" data="{{list:list1}}" />
    <text class="sm_title">我收藏的歌单 <text>({{subcount.subPlaylistCount}})</text>
    </text>
    <template is="pl" data="{{list:list2}}" />
  </view>
  <view wx:else class="cntloading">加载中...
    <view>
      <text class="cl1"></text>
      <text class="cl2"></text>
      <text class="cl3"></text>
    </view>
  </view>
</view>